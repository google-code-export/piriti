JSONString jsonString = currentJsonValue.isString();
if (jsonString != null)
{
    String stringValue = currentJsonValue.stringValue();
    if (stringValue != null)
    {
        if ($converter != null)
        {
            $currentValue = ${converter}.convert(stringValue);
        }
        else
        {
            if (stringValue.length() != 0)
            {
                $currentValue = stringValue.charAt(0);
            }
        }
    }
}
