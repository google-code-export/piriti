<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.0.0//EN" "http://google-web-toolkit.googlecode.com/svn/trunk/distro-source/core/src/gwt-module.dtd">
<module>
    <!-- $LastChangedBy: harald.pehl $LastChangedRevision: 138 $ -->
    <inherits name="com.google.gwt.inject.Inject" />
    <inherits name="com.google.gwt.json.JSON" />
    <inherits name="com.google.gwt.user.User" />
    <inherits name="com.google.gwt.xml.XML" />
    <inherits name="name.pehl.totoe.Totoe" />

    <source path="client">
        <exclude name="gwttest" />
        <exclude name="**/*Test.java" />
    </source>

    <script src="json2.js" />
    <script src="jsonpath.js" />

    <!-- Generator for JsonReader -->
    <generate-with class="name.pehl.piriti.rebind.json.JsonReaderGenerator">
        <when-type-assignable class="name.pehl.piriti.client.json.JsonReader" />
    </generate-with>

    <!-- Generator for JsonWriter -->
    <generate-with class="name.pehl.piriti.rebind.json.JsonWriterGenerator">
        <when-type-assignable class="name.pehl.piriti.client.json.JsonWriter" />
    </generate-with>

    <!-- Generator for XmlReader -->
    <generate-with class="name.pehl.piriti.rebind.xml.XmlReaderGenerator">
        <when-type-assignable class="name.pehl.piriti.client.xml.XmlReader" />
    </generate-with>

    <!-- Generator for XmlWriter -->
    <generate-with class="name.pehl.piriti.rebind.xml.XmlWriterGenerator">
        <when-type-assignable class="name.pehl.piriti.client.xml.XmlWriter" />
    </generate-with>

    <!-- GIN configuration -->
    <define-configuration-property name="gin.ginjector" is-multi-valued="false" />
    <set-configuration-property name="gin.ginjector" value="name.pehl.piriti.client.PiritiGinjector" />
</module>
