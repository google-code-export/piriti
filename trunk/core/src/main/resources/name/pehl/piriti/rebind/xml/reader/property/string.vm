#parse("name/pehl/piriti/rebind/xml/reader/property/commons.vm")
#if ($property.native)
    Node $nodeValue = element.selectNode("$property.pathOrName");
    if ($nodeValue != null) 
    {
        $value = $nodeValue.serialize();
    }
#else
    $value = element.selectValue("$property.pathOrName", $property.whitespaceHandling);
	#if ($property.hasConverter())
        Converter<String> $converter = null; 
        #customConverter() 
        if ($value != null && $converter != null)
        {
            $value = ${converter}.convert($value);
        }
    #end
#end
if ($value != null) 
{
    #assignValue()
}
