if ($value != null)
{
    #createConverter()
    String $valueAsString = ${converter}.serialize($value);
    if (isNumber($valueAsString))
    {
        out.append($valueAsString);
    }
    else
    {
        out.append(JsonUtils.escapeValue($valueAsString));
    }
}
else
{
    out.append("null");
}
